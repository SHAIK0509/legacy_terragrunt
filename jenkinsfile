pipeline {
    agent any
    environment {
        JENKINS_ENVIRONMENT = "true"
    }

    parameters {
        choice(
            name: 'ENVIRONMENT',
            choices: ['dev', 'stage', 'prod'],
            description: 'Choose environment to deploy'
        )
        booleanParam(
            name: 'AUTO_APPLY',
            defaultValue: false,
            description: 'Auto apply without approval?'
        )
        booleanParam(
            name: 'SKIP_APPLY',
            defaultValue: false,
            description: 'Skip apply stage?'
        )
        booleanParam(
            name: 'DESTROY_INFRA',
            defaultValue: false,
            description: 'Destroy infrastructure?'
        )
        booleanParam(
            name: 'AUTO_DESTROY',
            defaultValue: false,
            description: 'Auto destroy without approval?'
        )
    }

    stages {

        stage('Plan') {
            steps {
                script {
                    dir("terragrunt/ec2-terragrunt/live") {
                        echo "üîπ Planning Terragrunt for environment: ${params.ENVIRONMENT}"
                        sh "make plan ENV=${params.ENVIRONMENT}"
                    }
                }
            }
        }

        stage('Approve Apply') {
            when { expression { return !params.AUTO_APPLY && !params.SKIP_APPLY && !params.DESTROY_INFRA } }
            agent none
            steps {
                timeout(time: 30, unit: 'MINUTES') {
                    input message: "Do you approve Terragrunt apply for ${params.ENVIRONMENT}?"
                }
            }
        }

        stage('Deploy') {
            when { expression { return !params.SKIP_APPLY && !params.DESTROY_INFRA } }
            steps {
                script {
                    dir("terragrunt/ec2-terragrunt") {
                        echo "üöÄ Applying Terragrunt for environment: ${params.ENVIRONMENT}"
                        sh "make apply ENV=${params.ENVIRONMENT}"
                    }
                }
            }
        }

        stage('Destroy Approval') {
            when { expression { return params.DESTROY_INFRA && !params.AUTO_DESTROY } }
            agent none
            steps {
                timeout(time: 30, unit: 'MINUTES') {
                    input message: "Do you approve Terragrunt destroy for ${params.ENVIRONMENT}?"
                }
            }
        }

        stage('Destroy') {
            when { expression { return params.DESTROY_INFRA } }
            steps {
                script {
                    dir("terragrunt/ec2-terragrunt") {
                        echo "‚ö†Ô∏è Destroying Terragrunt infrastructure for environment: ${params.ENVIRONMENT}"
                        sh "make destroy ENV=${params.ENVIRONMENT}"
                    }
                }
            }
        }

        stage('Output') {
            steps {
                script {
                    dir("terragrunt/ec2-terragrunt") {
                        echo "üìÑ Fetching outputs for ${params.ENVIRONMENT}"
                        sh "make output ENV=${params.ENVIRONMENT}"
                    }
                }
            }
        }

        stage('Workspace Info') {
            steps {
                script {
                    echo "üìÇ Current workspace:"
                    sh 'pwd'
                    sh 'ls -lR'
                }
            }
        }

        stage('Clean') {
            when { expression { return !params.DESTROY_INFRA } }
            steps {
                script {
                    dir("terragrunt/ec2-terragrunt") {
                        echo "üßπ Cleaning temporary files"
                        sh 'make clean'
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline completed successfully for environment: ${params.ENVIRONMENT}"
        }
        failure {
            echo "‚ùå Pipeline failed for environment: ${params.ENVIRONMENT}"
        }
    }
}
